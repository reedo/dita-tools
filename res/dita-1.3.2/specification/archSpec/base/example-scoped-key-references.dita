      <entry>Resource</entry>
     </row>
    </thead>
    <tbody>
     <row>
      <entry>key-1</entry>
      <entry><filepath>topic-2.dita</filepath></entry>
     </row>
     <row>
      <entry>scope-1.key-1</entry>
      <entry><filepath>topic-1.dita</filepath></entry>
     </row>
     <row>
      <entry>scope-2.key-1</entry>
      <entry><filepath>topic-2.dita</filepath></entry>
     </row>
    </tbody>
   </tgroup>
  </table>
